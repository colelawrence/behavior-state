{
  "name": "bloc-utils",
  "description": "Utilities for building applications with the BLoC pattern",
  "license": "MIT",
  "version": "0.0.2",
  "scripts": {
    "build": "yarn build-dist && yarn build-readme",
    "clean": "rm -f *.d.ts *.js *.map react/* preact/* jest/*",
    "build-dist": "yarn clean && tsc --outDir ./",
    "build-readme": "typedoc --theme markdown --mode file --hideGenerator --excludeNotExported --excludePrivate --excludeExternals --out ./docs ./src"
  },
  "main": "index.js",
  "author": {
    "email": "cole@colelawrence.com",
    "name": "Cole Lawrence"
  },
  "keywords": [
    "frp",
    "bloc",
    "business logic",
    "state",
    "state management",
    "typescript",
    "rxjs",
    "jest",
    "react"
  ],
  "optionalDependencies": {
    "jest": "*",
    "preact": "*",
    "react": "*"
  },
  "peerDependencies": {
    "rxjs": "^6"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.4",
    "jest": "^24",
    "preact": "^10.0.0",
    "react": "^16",
    "rxjs": "^6",
    "typedoc": "^0.15.0",
    "typedoc-plugin-internal-external": "^2.0.2",
    "typedoc-plugin-markdown": "^2.1.10",
    "typescript": "^3.6.2"
  }
}
